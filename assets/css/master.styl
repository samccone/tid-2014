global-reset()

html
  -webkit-font-smoothing: antialiased
  font-family: "HelveticaNeue-Medium", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;

h3
  font-size: 19px

h1
  margin-top: 10px
  font-family: "HelveticaNeue-UltraLight", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
  font-size: 70px

main
  max-width: 900px
  margin: 0 auto

  h4
    text-transform: capitalize
    margin-bottom: 10px
    font-size: 25px

  p
    font-size: 14px
    line-height: 20px
    font-family: "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;

.attend
  border: solid 1px #FFF
  border-radius: 3px
  display: inline-block
  padding: 10px 40px
  margin-top: 50px
  cursor: pointer

.col-half
  width: 50%
  max-width: 400px
  float: left
  padding: 25px

  +below(900px)
    width: 100%
    p
      max-width: 450px

.staff-list
  padding-top: 10px

  .name
    margin-bottom: 5px
  p
    font-size: 13px
    line-height: 15px
    margin-bottom: 10px
header
  min-width: 614px
  color: #FFF
  text-align: center
  position: relative

  .contents
    top: 0
    position: absolute
    z-index: 1
    width: 100%
    top: 50%
    margin-top: -95px

  .overlay
    top: 0
    position: absolute
    width: 100%
    height: 100%
    background-image: -o-linear-gradient(-90deg, rgba(64,146,251,0.73) 0%, rgba(37,74,172,0.88) 100%);
    background-image: -moz-linear-gradient(-90deg, rgba(64,146,251,0.73) 0%, rgba(37,74,172,0.88) 100%);
    background-image: -webkit-linear-gradient(-90deg, rgba(64,146,251,0.73) 0%, rgba(37,74,172,0.88) 100%);
    background-image: -ms-linear-gradient(-90deg, rgba(64,146,251,0.73) 0%, rgba(37,74,172,0.88) 100%);
    background-image: linear-gradient(-180deg, rgba(64,146,251,0.73) 0%, rgba(37,74,172,0.88) 100%);

  img
    max-width: 100%
