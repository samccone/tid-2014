global-reset()

html
  -webkit-font-smoothing: antialiased
  font-family: "HelveticaNeue-Medium", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;

h3
  font-size: 19px
  padding-top: 20%

h1
  margin-top: 10px
  font-family: "HelveticaNeue-UltraLight", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;
  font-size: 70px

.attend
  border: solid 1px #FFF
  border-radius: 3px
  display: inline-block
  padding: 10px 40px
  margin-top: 50px
  cursor: pointer

header
  min-width: 614px
  color: #FFF
  text-align: center
  position: relative

  .contents
    position: relative
    z-index: 1

  .background, .overlay
    top: 0
    position: absolute

  .overlay
    width: 100%
    height: 100%
    background-image: -o-linear-gradient(-90deg, rgba(64,146,251,0.73) 0%, rgba(37,74,172,0.88) 100%);
    background-image: -moz-linear-gradient(-90deg, rgba(64,146,251,0.73) 0%, rgba(37,74,172,0.88) 100%);
    background-image: -webkit-linear-gradient(-90deg, rgba(64,146,251,0.73) 0%, rgba(37,74,172,0.88) 100%);
    background-image: -ms-linear-gradient(-90deg, rgba(64,146,251,0.73) 0%, rgba(37,74,172,0.88) 100%);
    background-image: linear-gradient(-180deg, rgba(64,146,251,0.73) 0%, rgba(37,74,172,0.88) 100%);

  img
    max-width: 100%
